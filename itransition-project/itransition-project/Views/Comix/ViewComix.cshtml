@model itransition_project.Models.JsonReturnComixViewModel
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<h6>@Html.ActionLink(@Model.Author.UserName, "UserInfo", "User", new { id = Model.Author.UserName }, null), @Model.CreationTime.ToString()</h6>
<div class="container">
    <div id="pages">
        @foreach (var page in Model.Pages)
        {
            switch (page.Template)
            {
                case "skew":
                    @Html.Partial("~/Views/Templates/SkewView.cshtml", page)
                    break;
                case "triad":
                    @Html.Partial("~/Views/Templates/TriadView.cshtml", page)
                    break;
                case "tetrad":
                    @Html.Partial("~/Views/Templates/TetradView.cshtml", page)
                    break;
            }
        }
    </div>
</div>




@{
    ViewBag.Title = "AddComix";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddComix</h2>

<div class="container" ng-app="ComixAdd">
    <div ng-controller="switchTemplateController">
        <select ng-model="selection" ng-options="item for item in items"></select>
        <hr />
        <div ng-switch on="selection">
            <div ng-switch-when="skew">
                @Html.Partial("~/Views/Templates/Skew.cshtml")
            </div>
            <div ng-switch-when="triad">
                @Html.Partial("~/Views/Templates/Triad.cshtml")
            </div>
            <div ng-switch-when="tetrad">
                @Html.Partial("~/Views/Templates/Tetrad.cshtml")
            </div>
        </div>
    </div>
</div>


@section scripts{
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/template")
    @Scripts.Render("~/bundles/AddComix")
}


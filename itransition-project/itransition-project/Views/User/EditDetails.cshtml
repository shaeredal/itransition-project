 @model itransition_project.Models.Profile

@{
    ViewBag.Title = "EditDetails";
}

<h2>@Model.User.Profile.User.UserName</h2>
@using (Html.BeginForm("EditDetails", "User", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.About, "About")
            <br/>
            @Html.EditorFor(m => m.About)
        </p>
        <select class="form-control" name="Theme" id="Theme">
            <option>Light</option>
            <option>Dark</option>
        </select>
        <p><input type="submit" value="Отправить" /></p>
    </fieldset>
}

<div id="userActions">
<p>Drag &amp; Drop Image</p>
    <img id="imgPrime" type="file" id="fileUpload" src="@Model.Photo"/>
</div>


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryui")
@Scripts.Render("~/bundles/DragAndDrop")
@Styles.Render("~/Content/DragAndDrop")

        }
